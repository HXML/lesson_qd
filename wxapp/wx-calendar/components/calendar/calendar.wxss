/* components/calendar/calendar.wxss */

.calendar {
    width: 100%;
    text-align: center;
    font-size: 30rpx;
}

.calendar-title {
    padding: 0 20rpx;
    text-align: left;
}

.calendar-title .ctrl {
    padding: 0 20rpx;
    background-color: #f5f5f5;
    border-radius: 10rpx;
}

.calendar-title .item {
    display: inline-block;
    line-height: 50rpx;
    vertical-align: middle;
}

.calendar-title .title {
    min-width: 300rpx;
    text-align: center;
}

.calendar-title .today {
    float: right;
}

.calendar-week {
    display: flex;
    text-align: center;
    padding: 20rpx 10rpx;
    border-top: 1rpx solid #e0e0e0;
    border-bottom: 1rpx solid #e0e0e0;
    background: #f5f5f5;
}

.calendar-week .item {
    flex: 1;
}